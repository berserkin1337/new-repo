<% layout('layouts/boilerplate')%>

   <div class="row">
      <h1 class="text-center">New Camp</h1>
      <div class="col-6 offset-3">
         <form action="/makecamp" method="post">
            <div class="mb-3">
               <label class="form-label" for="title">Title</label>
               <!-- <br> -->
               <input class="form-control" type="text" name="title" id="title" placeholder="">
            </div>
            <div class="mb-3">
               <label class="form-label" for="location">Locations</label>
               <!-- <br> -->
               <input class="form-control" type="text" name="location" id="location" placeholder=""></input>
               <!-- <input type="text" name="location" id="location" placeholder="add location"> -->
            </div>
            <div clas="mb-3">
               <label class="form-label" for="price">Price</label>
            <div class="input-group mb-3">
               <span class="input-group-text" id="price-label">$</span>
               <input type="text" class="form-control" id="price" name = "price" placeholder="0.00" aria-label="price-label" aria-describedby="price-label">
             </div>
            </div>
            <div class="mb-3">
               <label class="form-label" for="image">Image Url</label>
               <!-- <br> -->
               <input class="form-control" type="text" name="image" id="image" placeholder=""></input>
               <!-- <input type="text" name="location" id="location" placeholder="add location"> -->
            </div>
            <div class="mb-3">
               <label class="form-label" for="description">Description</label>
               <!-- <br> -->
               <textarea class="form-control" type="text" name="description" id="description" placeholder=""></textarea>
               <!-- <input type="text" name="location" id="location" placeholder="add location"> -->
            </div>
            <button class="btn btn-success">Add Camp</button>
         </form>
         <!-- <a href="/makecamp">Back to Homepage</a> -->
      </div>
   </div>

