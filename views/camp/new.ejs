<% layout('layouts/boilerplate')%>

   <div class="row">
      <h1 class="text-center">New Camp</h1>
      <div class="col-6 offset-3">
         <form action="/makecamp" method="post" class="validation-form" enctype =  "multipart/form-data" novalidate>
            <div class="mb-3">
               <label class="form-label" for="title">Title</label>
               <!-- <br> -->
               <input class="form-control" type="text" name="title" id="title" placeholder="" required>
               <div class="valid-feedback">
                  Looks good!
               </div>
            </div>
            <div class="mb-3">
               <label class="form-label" for="location">Locations</label>
               <!-- <br> -->
               <input class="form-control" type="text" name="location" id="location" placeholder="" required></input>
               <div class="valid-feedback">
                  Looks good!
               </div>
               <!-- <input type="text" name="location" id="location" placeholder="add location"> -->
            </div>
            <div clas="mb-3">
               <label class="form-label" for="price">Price</label>
               <div class="input-group mb-3">
                  <span class="input-group-text" id="price-label">&#8377;</span>
                  <input type="text" class="form-control" id="price" name="price" placeholder="0.00"
                     aria-label="price-label" aria-describedby="price-label" required>
                  <div class="valid-feedback">
                     Looks good!
                  </div>
               </div>
            </div>
           
            <div class="mb-3">
               <label class="form-label" for="description">Description</label>
               <!-- <br> -->
               <textarea class="form-control" type="text" name="description" id="description" placeholder=""
                  required></textarea>
               <div class="valid-feedback">
                  Looks good!
               </div>
               <!-- <input type="text" name="location" id="location" placeholder="add location"> -->
            </div>
            <div class="mb-3">
               
               <div class="form-file custom-file">
                  <input type="file" class="form-file-input" id="image" name="image" multiple>
                  <label class="form-file-label" for="image">
                      <span class="form-file-text custom-file-label">Choose image(s)...</span>
                      <span class="form-file-button">Browse</span>
                  </label>
              </div>

            </div>
            <button class="btn btn-success">Add Camp</button>
         </form>
         <!-- <a href="/makecamp">Back to Homepage</a> -->
      </div>
   </div>
  